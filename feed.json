---
layout: none
---
[
  {% for post in site.posts %}
    {
      "title": "{{ post.title | escape }}",
      "url": "{{ post.url | absolute_url }}",
      "date": "{{ post.date | date_to_xmlschema }}",
      "excerpt": "{{ post.excerpt | strip_html | truncatewords: 20 | escape }}"
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]